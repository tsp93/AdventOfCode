@page "/adventofcode2022"

<PageTitle>Advent of Code</PageTitle>

<h1>Advent of Code</h1>

<div class="d-flex flex-row">
    <div class="col-12 col-sm-6">
        <AdventDayDropdown @bind-SelectedAdventDay=@AdventDay />

        <InputFileAdvent CssClass="my-3" @bind-InputStrings=@Inputs />

        <SfButton OnClick=@SolveForInput>Solve</SfButton>

    </div>
    <div class="col-12 col-sm-6">
        <ResultDisplayer Results=@Solutions />
    </div>
</div>
